{
  "name": "veriton-employee-messaging",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    
    "build:check": "vite build && node scripts/verify-build.js",
    "deploy:prepare": "npm run build && node scripts/prepare-deployment.js",
    "deploy:verify": "node scripts/verify-deployment.js",
    "deploy:fix": "bash scripts/fix-deployment.sh",
    "deploy:monitor": "bash scripts/monitor-deployment.sh",
    "deploy:full": "npm run build:check && npm run deploy:prepare && echo 'Ready for deployment!'"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.76.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.24.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.6.2",
    "vite": "^6.2.6"
  }
